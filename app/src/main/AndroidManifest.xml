<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TunaJam"
        android:name=".TunaJamApplication"
        tools:targetApi="31">

        <activity
            android:name=".spotify_login.MainActivity"
            android:exported="true"
            android:launchMode="standard"
            android:theme="@style/Theme.TunaJam">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="com.tunajam.app" android:host="callback"/>

            </intent-filter>
        </activity>
        <activity
            android:name=".home.HomeActivity"
            android:exported="true"
            android:launchMode="standard"
            android:theme="@style/Theme.TunaJam" />
        <activity
            android:name=".playlist.PlaylistGenerationActivity"
            android:exported="true"
            android:launchMode="standard"
            android:theme="@style/Theme.TunaJam" />
    </application>

</manifest>